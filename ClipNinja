  <script>
    function showMessage(event) {
      event.preventDefault();
      const form = event.target;
      const msg = document.getElementById("success-message");
      fetch(form.action, {
        method: "POST",
        body: new FormData(form),
        headers: {
          'Accept': 'application/json'
        }
      }).then(response => {
        if (response.ok) {
          form.reset();
          msg.style.display = 'block';
        }
      });
    }
  </script>
